<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:background="@color/colorPrimary">
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:paddingStart="25dp"
            android:paddingEnd="25dp">
        <TextView
                android:id="@+id/highscore_col_name"
                android:text="@string/highScoreColOne"
                android:textColor="@color/colorPrimaryText"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"/>
        <TextView
                android:id="@+id/highscore_col_win"
                android:text="@string/highScoreColTwo"
                android:textColor="@color/colorPrimaryText"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/highscore_col_draw"
                android:text="@string/highScoreColThree"
                android:textColor="@color/colorPrimaryText"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        <TextView
                android:id="@+id/highscore_col_loose"
                android:text="@string/highScoreColFour"
                android:textColor="@color/colorPrimaryText"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/highscoore_recycler_view"
            android:scrollbars="vertical"
            android:layout_height="wrap_content"
            android:layout_width="0dp"/>
</TableLayout>